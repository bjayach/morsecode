<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drk_grey_bg"
    android:orientation="vertical" >

   <TextView
       android:id="@+id/tvRemoveAd"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_marginLeft="46dp"
   android:layout_marginTop="34dp"
   android:text="Please support the developer by doing one of the below."
   android:textAppearance="?android:attr/textAppearanceLarge"
   android:textColor="#FFFFFF" />

   <Button
       android:id="@+id/ib2Dllr"
       style="@android:style/Widget.DeviceDefault.Button.Small"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_below="@+id/tvRemoveAd"
       android:layout_marginLeft="17dp"
       android:layout_marginStart="17dp"
       android:layout_marginTop="61dp"
       android:text="Pay $2 USD"
       android:textColor="@android:color/holo_orange_dark" />

   <TextView
       android:id="@+id/tvSilver"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/ib2Dllr"
       android:layout_marginLeft="15dp"
       android:layout_marginStart="15dp"
       android:layout_marginTop="13dp"
       android:layout_toEndOf="@+id/ib2Dllr"
       android:layout_toRightOf="@+id/ib2Dllr"
       android:text="TextView"
       android:textColor="@android:color/holo_orange_dark" />

   <Button
       android:id="@+id/ib5Dllr"
       style="@android:style/Widget.DeviceDefault.Button.Small"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_below="@+id/tvSilver"
       android:layout_marginLeft="17dp"
       android:layout_marginStart="17dp"
       android:layout_marginTop="61dp"
       android:text="Pay $5 USD"
       android:textColor="@android:color/holo_orange_dark" />

   <TextView
       android:id="@+id/tvGold"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/ib5Dllr"
       android:layout_marginLeft="15dp"
       android:layout_marginStart="15dp"
       android:layout_marginTop="13dp"
       android:layout_toEndOf="@+id/ib5Dllr"
       android:layout_toRightOf="@+id/ib5Dllr"
       android:text="TextView"
       android:textColor="@android:color/holo_orange_dark" />

   <Button
       android:id="@+id/ib10Dllr"
       style="@android:style/Widget.DeviceDefault.Button.Small"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_below="@+id/tvGold"
       android:layout_marginLeft="17dp"
       android:layout_marginStart="17dp"
       android:layout_marginTop="61dp"
       android:text="Pay $12 USD"
       android:textColor="@android:color/holo_orange_dark" />

   <TextView
       android:id="@+id/tvPlatinum"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/ib10Dllr"
       android:layout_marginLeft="15dp"
       android:layout_marginStart="15dp"
       android:layout_marginTop="13dp"
       android:layout_toEndOf="@+id/ib10Dllr"
       android:layout_toRightOf="@+id/ib10Dllr"
       android:text="TextView"
       android:textColor="@android:color/holo_orange_dark" />

   <Button
       android:id="@+id/ib100Dllr"
       style="@android:style/Widget.DeviceDefault.Button.Small"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_below="@+id/tvPlatinum"
       android:layout_marginLeft="17dp"
       android:layout_marginStart="17dp"
       android:layout_marginTop="61dp"
       android:text="Pay $100 USD"
       android:textColor="@android:color/holo_orange_dark" />

   <TextView
       android:id="@+id/tvCarbon"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/ib100Dllr"
       android:layout_marginLeft="15dp"
       android:layout_marginStart="15dp"
       android:layout_marginTop="13dp"
       android:layout_toEndOf="@+id/ib100Dllr"
       android:layout_toRightOf="@+id/ib100Dllr"
       android:text="TextView"
       android:textColor="@android:color/holo_orange_dark" />

</RelativeLayout>
